@model IEnumerable<MusicViewModel>
@{
    ViewBag.Title = "Search";
}
<div class="row">
    <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
        <h3 style="color:lightgray">Songs That Match Your Search: @ViewBag.c</h3>
        <hr />
        @foreach (var item in Model)
        {
            <div class="row thumbnail" style="border:1px;border-color:rosybrown;border-style:solid;background-color:rosybrown;">
                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-8 pull-right">
                    <p>Song Name: @item.name</p>
                    <p>Genre: @item.genreName</p>
                    <a href="/Home/SongPage/@item.Id" style="color:seagreen">More info...</a>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-4 pull-left">
                    <img class="img-thumbnail" src="@item.pic" style="height: 120px; width: 120px" />
                </div>
            </div>
            <br />
        }
    </div>
    <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
</div>


